.user-logo{
  background-color: #fdf9dc;
  background: #fdf9dc;
  height: 250rpx;

  display: flex;
  justify-content: center; 
  flex-direction: column;
  align-items: center; 
}

/* 共享view样式*/
.friendstyle {
  padding: 25rpx 40rpx;
  background: #EDE9CE;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-style: solid;
  border-color: #fdf9dc;
  display: flex;
  align-items: center;

}

.userstyle {
  padding: 25rpx 25rpx;
  background: #1cc473;
  border-width: 0rpx 0rpx 0rpx 0rpx;
   border-style: solid; 
  border-color: #fdf9dc;
  display: flex;
  align-items: center;

}
/* 共享view里面的text样式*/
.userTextStyle {
  color: #4a4a4a;
  font-size: 26rpx;
  line-height: 1.42857;
  flex: 1;
}
/* 共享右箭头设置*/
.righthead:after{

  content: '';
  /*即不把兄弟挤下去 又能设置自己的style  inline不能设置大小 block会挤下去 所以有了inline-block*/
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  /* border: 3rpx solid #A3A3A3; */
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;
}


.users {
  border-width: 17rpx 0rpx 10rpx 0rpx;
  border-style: solid;
  border-color: #fdf9dc;
  display: flex;
  align-items: center;
}



.avatar{
  width: 150rpx;
  height: 150rpx;
  border-width: 50 rpx 50rpx 50 rpx 50 rpx;
  /* border: 0 solid #F7ECDE; */
  border-radius: 150rpx; 
  background-color: #F7ECDE;
  
}
